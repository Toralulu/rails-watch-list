<div class="container">
  <div class="row">
    <!-- Column for displaying lists -->
    <div class="col-8">
      <h1>My Lists</h1>
      <div class="cards">
        <% @lists.each do |list| %>
          <div>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key) if list.photo.attached? %>')">
              <h2><%= link_to list.name, list_path(list) %></h2>
              <div class="icon-container">
                <%= link_to '#myModal', class: 'edit-icon', data: { toggle: 'modal' } do %>
                  <i class="fa-solid fa-pencil"></i>
                <% end %>
                <%= link_to list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-icon' do %>
                  <i class="fa-solid fa-trash-can"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Column for the form -->
    <div class="col-4">
      <div class="list-form">
        <h1>Add a new list</h1>
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

